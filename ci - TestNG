name: CI for TestNG

# Указываем, что процесс CI будет запускаться при push или pull request в ветки
on:
  push:
    branches:
      - TestNG
  pull_request:
    branches:
      - TestNG

jobs:
  build:
    runs-on: ubuntu-latest

    steps:
      # Шаг 1: Получение кода из репозитория
      - name: Checkout repository
        uses: actions/checkout@v2

      # Шаг 2: Настройка JDK 11 (можно изменить версию при необходимости)
      - name: Set up JDK 11
        uses: actions/setup-java@v1
        with:
          java-version: '11'

      # Шаг 3: Предоставляем права на выполнение для скрипта gradlew
      - name: Grant execute permission for gradlew
        run: chmod +x gradlew

      # Шаг 4: Выполняем сборку проекта с помощью Gradle
      - name: Build with Gradle
        run: ./gradlew build

      # Шаг 5: Запуск тестов с помощью Gradle и TestNG
      - name: Run tests with Gradle and TestNG
        run: ./gradlew test
